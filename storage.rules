rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    function isValidSize() {
      return request.resource.size <= 10 * 1024 * 1024; // 10MB max
    }

    // User uploads folder: uploads/{uid}/{filename}
    match /uploads/{uid}/{filename} {
      // Only the owner can read their own images
      allow read: if isOwner(uid);

      // Only the owner can upload to their folder
      allow create: if isOwner(uid)
        && isImage()
        && isValidSize();

      // Only the owner can update their files
      allow update: if isOwner(uid)
        && isImage()
        && isValidSize();

      // Only the owner can delete their files
      allow delete: if isOwner(uid);
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
